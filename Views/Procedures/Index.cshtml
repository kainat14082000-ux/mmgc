@model IEnumerable<MMGC.Models.Procedure>
@{
    ViewData["Title"] = "Procedures";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-clipboard-pulse"></i> Procedures</h2>
            <p>Manage medical procedures and treatments</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Procedure
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@Html.AntiForgeryToken()

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control" placeholder="Search procedures...">
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info fs-6">Total: @Model.Count() Procedures</span>
            </div>
        </div>
    </div>
</div>

<!-- Procedures Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Patient</th>
                            <th><i class="bi bi-clipboard-pulse"></i> Procedure Name</th>
                            <th><i class="bi bi-tag"></i> Type</th>
                            <th><i class="bi bi-person-badge"></i> Doctor</th>
                            <th><i class="bi bi-calendar"></i> Date</th>
                            <th><i class="bi bi-cash"></i> Fee</th>
                            <th><i class="bi bi-info-circle"></i> Status</th>
                            <th><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2" style="width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            @(item.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                        </div>
                                        <strong>@item.Patient?.FullName</strong>
                                    </div>
                                </td>
                                <td><strong>@item.ProcedureName</strong></td>
                                <td><span class="badge bg-secondary">@item.ProcedureType</span></td>
                                <td>@item.Doctor?.FullName</td>
                                <td>
                                    <i class="bi bi-calendar-event text-primary"></i> 
                                    @item.ProcedureDate.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    <strong class="text-success">PKR @item.ProcedureFee.ToString("N2")</strong>
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            "Scheduled" => "bg-primary",
                                            "In Progress" => "bg-warning",
                                            "Completed" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">
                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger delete-procedure" data-procedure-id="@item.Id" data-procedure-name="@item.ProcedureName" data-patient-name="@item.Patient?.FullName" data-bs-toggle="tooltip" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-clipboard-pulse" style="font-size: 4rem; color: #e0e0e0;"></i>
                <p class="text-muted mt-3 mb-0">No procedures recorded yet.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Record First Procedure
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // SweetAlert Delete Confirmation
            $('.delete-procedure').on('click', function() {
                const procedureId = $(this).data('procedure-id');
                const procedureName = $(this).data('procedure-name');
                const patientName = $(this).data('patient-name');
                const deleteUrl = '@Url.Action("Delete", "Procedures")';
                const token = $('input[name="__RequestVerificationToken"]').val();

                function attemptDelete(forceDelete) {
                    const formData = new FormData();
                    formData.append('id', procedureId);
                    formData.append('forceDelete', forceDelete);
                    formData.append('__RequestVerificationToken', token);

                    return fetch(deleteUrl, {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    });
                }

                Swal.fire({
                    title: 'Are you sure?',
                    html: `You are about to delete the procedure <strong>${procedureName}</strong><br>for patient <strong>${patientName}</strong>.<br><br>This action cannot be undone!`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: '<i class="bi bi-trash"></i> Yes, delete it!',
                    cancelButtonText: '<i class="bi bi-x-circle"></i> Cancel',
                    reverseButtons: true,
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        return attemptDelete(false)
                        .then(data => {
                            if (!data.success) {
                                // Check if force delete is available
                                if (data.canForceDelete && data.blockingRecords) {
                                    // Show blocking records and offer force delete
                                    const blockingList = data.blockingRecords.map(r => `<li>${r}</li>`).join('');
                                    Swal.fire({
                                        title: 'Cannot Delete',
                                        html: `<p>${data.message}</p><ul style="text-align: left; margin-top: 10px;">${blockingList}</ul><p style="margin-top: 15px; color: #d33;"><strong>Warning:</strong> Force delete will remove this procedure even though it's referenced by other records. This may cause data inconsistency.</p>`,
                                        icon: 'error',
                                        showCancelButton: true,
                                        confirmButtonColor: '#d33',
                                        cancelButtonColor: '#3085d6',
                                        confirmButtonText: '<i class="bi bi-exclamation-triangle"></i> Force Delete Anyway',
                                        cancelButtonText: '<i class="bi bi-x-circle"></i> Cancel',
                                        reverseButtons: true,
                                        showLoaderOnConfirm: true,
                                        preConfirm: () => {
                                            return attemptDelete(true)
                                            .then(forceData => {
                                                if (!forceData.success) {
                                                    throw new Error(forceData.message || 'Failed to force delete procedure');
                                                }
                                                return forceData;
                                            });
                                        }
                                    }).then((forceResult) => {
                                        if (forceResult.isConfirmed) {
                                            Swal.fire({
                                                title: 'Force Deleted!',
                                                text: forceResult.value.message || 'Procedure has been force deleted.',
                                                icon: 'warning',
                                                confirmButtonColor: '#3085d6',
                                                timer: 2000,
                                                timerProgressBar: true
                                            }).then(() => {
                                                location.reload();
                                            });
                                        }
                                    });
                                    // Prevent the original promise from resolving
                                    return new Promise(() => {}); // Hang forever
                                } else {
                                    throw new Error(data.message || 'Failed to delete procedure');
                                }
                            }
                            return data;
                        })
                        .catch(error => {
                            Swal.showValidationMessage(`Request failed: ${error.message}`);
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed && result.value) {
                        Swal.fire({
                            title: 'Deleted!',
                            text: result.value.message || 'Procedure has been deleted.',
                            icon: 'success',
                            confirmButtonColor: '#3085d6',
                            timer: 2000,
                            timerProgressBar: true
                        }).then(() => {
                            location.reload();
                        });
                    }
                });
            });
        });
    </script>
}
