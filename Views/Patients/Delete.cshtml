@model MMGC.Models.Patient
@{
    ViewData["Title"] = "Delete Patient";
}

<h2><i class="bi bi-trash"></i> Delete Patient</h2>
<hr />

<h3>Are you sure you want to delete this patient?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">MR Number</dt>
        <dd class="col-sm-10">@Model.MRNumber</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.ContactNumber</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@(Model.Email ?? "-")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
