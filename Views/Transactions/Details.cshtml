@model MMGC.Models.Transaction
@{
    ViewData["Title"] = "Transaction Details";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-cash-coin"></i> Transaction Details</h2>
            <p>View complete transaction information</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Transaction Information -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-cash-coin"></i> Transaction Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-file-text"></i> Description</strong>
                        <p class="mb-0"><strong>@Model.Description</strong></p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-tag"></i> Transaction Type</strong>
                        <p class="mb-0"><span class="badge bg-secondary">@Model.TransactionType</span></p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-cash-coin"></i> Amount</strong>
                        <p class="mb-0"><strong class="text-success" style="font-size: 1.5rem;">PKR @Model.Amount.ToString("N2")</strong></p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-credit-card"></i> Payment Mode</strong>
                        <p class="mb-0">
                            @{
                                var paymentIcon = Model.PaymentMode switch
                                {
                                    "Cash" => "bi-cash",
                                    "Card" => "bi-credit-card",
                                    "Bank" => "bi-bank",
                                    "Online" => "bi-phone",
                                    _ => "bi-wallet2"
                                };
                            }
                            <i class="bi @paymentIcon"></i> <strong>@Model.PaymentMode</strong>
                        </p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-calendar-event"></i> Transaction Date</strong>
                        <p class="mb-0">@Model.TransactionDate.ToString("dd MMM yyyy hh:mm tt")</p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-info-circle"></i> Status</strong>
                        <p class="mb-0">
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Pending" => "bg-warning",
                                    "Completed" => "bg-success",
                                    "Refunded" => "bg-info",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">
                                <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @Model.Status
                            </span>
                        </p>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="bi bi-hash"></i> Reference Number</strong>
                            <p class="mb-0">@Model.ReferenceNumber</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Patient Information -->
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-person"></i> Patient Information</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary text-white me-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        @(Model.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                    </div>
                    <div>
                        <strong>@Model.Patient?.FullName</strong><br>
                        <small class="text-muted">MR: @Model.Patient?.MRNumber</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Records -->
        @if (Model.Appointment != null || Model.Procedure != null || Model.LabTest != null)
        {
            <div class="card mb-4">
                <div class="card-header" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white;">
                    <h5 class="mb-0"><i class="bi bi-link"></i> Related Records</h5>
                </div>
                <div class="card-body">
                    @if (Model.Appointment != null)
                    {
                        <div class="mb-2">
                            <strong>Appointment:</strong> 
                            <a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.Appointment.Id">
                                Appointment #@Model.Appointment.Id - @Model.Appointment.AppointmentDate.ToString("dd MMM yyyy")
                            </a>
                        </div>
                    }
                    @if (Model.Procedure != null)
                    {
                        <div class="mb-2">
                            <strong>Procedure:</strong> 
                            <a asp-controller="Procedures" asp-action="Details" asp-route-id="@Model.Procedure.Id">
                                @Model.Procedure.ProcedureName
                            </a>
                        </div>
                    }
                    @if (Model.LabTest != null)
                    {
                        <div class="mb-2">
                            <strong>Lab Test:</strong> 
                            <a asp-controller="LabTests" asp-action="Details" asp-route-id="@Model.LabTest.Id">
                                @Model.LabTest.TestName
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar Information -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Additional Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong><i class="bi bi-person"></i> Created By</strong>
                    <p class="mb-0">@(Model.CreatedBy ?? "System")</p>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-calendar"></i> Created Date</strong>
                    <p class="mb-0">@Model.CreatedDate.ToString("dd MMM yyyy hh:mm tt")</p>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-file-earmark-pdf"></i> Invoice Status</strong>
                    <p class="mb-0">
                        @if (Model.InvoiceGenerated)
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Generated</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Not Generated</span>
                        }
                    </p>
                </div>
                @if (Model.PaymentConfirmationSent)
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-envelope-check"></i> Payment Confirmation</strong>
                        <p class="mb-0"><span class="badge bg-success"><i class="bi bi-check-circle"></i> Sent</span></p>
                    </div>
                }
                <hr>
                <div class="d-grid gap-2">
                    <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-primary">
                        <i class="bi bi-person"></i> View Patient Profile
                    </a>
                    @if (!Model.InvoiceGenerated)
                    {
                        <button onclick="generateInvoice(@Model.Id)" class="btn btn-success">
                            <i class="bi bi-file-earmark-pdf"></i> Generate Invoice
                        </button>
                    }
                    else if (!string.IsNullOrEmpty(Model.InvoicePath))
                    {
                        <a asp-action="DownloadInvoice" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-download"></i> Download Invoice
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function generateInvoice(id) {
            Swal.fire({
                title: 'Generate Invoice?',
                text: 'Are you sure you want to generate an invoice for this transaction?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-file-earmark-pdf"></i> Yes, generate',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Generating...',
                        text: 'Please wait while we generate the invoice.',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    fetch(`/Transactions/GenerateInvoice/${id}`, { method: 'POST' })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Invoice Generated!',
                                    text: 'Invoice has been generated successfully.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Failed',
                                    text: 'Failed to generate invoice: ' + (data.message || 'Unknown error'),
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                title: 'Error',
                                text: 'Error generating invoice: ' + error.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        });
                }
            });
        }
    </script>
}

