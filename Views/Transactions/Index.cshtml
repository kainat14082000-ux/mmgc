@model IEnumerable<MMGC.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var totalAmount = Model.Sum(t => t.Amount);
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-cash-coin"></i> Transactions</h2>
            <p>Manage financial transactions and invoices</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Transaction
        </a>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@Html.AntiForgeryToken()

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Total Transactions</p>
                    <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                </div>
                <div class="dashboard-icon icon-primary">
                    <i class="bi bi-receipt"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Total Amount</p>
                    <h3 class="mb-0 fw-bold text-success">PKR @totalAmount.ToString("N2")</h3>
                </div>
                <div class="dashboard-icon icon-success">
                    <i class="bi bi-cash-stack"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Pending Payments</p>
                    <h3 class="mb-0 fw-bold text-warning">@Model.Count(t => t.Status == "Pending")</h3>
                </div>
                <div class="dashboard-icon icon-warning">
                    <i class="bi bi-hourglass-split"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control" placeholder="Search transactions...">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transactions Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Patient</th>
                            <th><i class="bi bi-file-text"></i> Description</th>
                            <th><i class="bi bi-tag"></i> Type</th>
                            <th><i class="bi bi-cash"></i> Amount</th>
                            <th><i class="bi bi-credit-card"></i> Payment Mode</th>
                            <th><i class="bi bi-calendar"></i> Date</th>
                            <th><i class="bi bi-info-circle"></i> Status</th>
                            <th><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success text-white me-2" style="width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            @(item.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                        </div>
                                        <strong>@item.Patient?.FullName</strong>
                                    </div>
                                </td>
                                <td>@item.Description</td>
                                <td><span class="badge bg-secondary">@item.TransactionType</span></td>
                                <td><strong class="text-success">PKR @item.Amount.ToString("N2")</strong></td>
                                <td>
                                    @{
                                        var paymentIcon = item.PaymentMode switch
                                        {
                                            "Cash" => "bi-cash",
                                            "Card" => "bi-credit-card",
                                            "Bank" => "bi-bank",
                                            "Online" => "bi-phone",
                                            _ => "bi-wallet2"
                                        };
                                    }
                                    <i class="bi @paymentIcon"></i> @item.PaymentMode
                                </td>
                                <td>
                                    <i class="bi bi-calendar-event text-primary"></i> 
                                    @item.TransactionDate.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            "Pending" => "bg-warning",
                                            "Completed" => "bg-success",
                                            "Refunded" => "bg-info",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">
                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (!item.InvoiceGenerated)
                                        {
                                            <button onclick="generateInvoice(@item.Id)" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Generate Invoice">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </button>
                                        }
                                        else if (!string.IsNullOrEmpty(item.InvoicePath))
                                        {
                                            <a asp-action="DownloadInvoice" asp-route-id="@item.Id" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Download Invoice">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        }
                                        <button type="button" class="btn btn-sm btn-danger delete-transaction" data-transaction-id="@item.Id" data-amount="@item.Amount.ToString("N2")" data-patient-name="@item.Patient?.FullName" data-bs-toggle="tooltip" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cash-coin" style="font-size: 4rem; color: #e0e0e0;"></i>
                <p class="text-muted mt-3 mb-0">No transactions recorded yet.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create First Transaction
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Search functionality
        $(document).ready(function() {
            $('#tableSearch').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('table tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });

        function generateInvoice(id) {
            Swal.fire({
                title: 'Generate Invoice?',
                text: 'Are you sure you want to generate an invoice for this transaction?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="bi bi-file-earmark-pdf"></i> Yes, generate',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Generating...',
                        text: 'Please wait while we generate the invoice.',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    fetch(`/Transactions/GenerateInvoice/${id}`, { method: 'POST' })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    title: 'Invoice Generated!',
                                    text: 'Invoice has been generated successfully.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Failed',
                                    text: 'Failed to generate invoice: ' + (data.message || 'Unknown error'),
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                title: 'Error',
                                text: 'Error generating invoice: ' + error.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        });
                }
            });
        }

        // SweetAlert Delete Confirmation
        $('.delete-transaction').on('click', function() {
            const transactionId = $(this).data('transaction-id');
            const amount = $(this).data('amount');
            const patientName = $(this).data('patient-name') || 'Unknown';
            const deleteUrl = '@Url.Action("Delete", "Transactions")';
            const token = $('input[name="__RequestVerificationToken"]').val();

            Swal.fire({
                title: 'Are you sure?',
                html: `You are about to delete a transaction of <strong>PKR ${amount}</strong><br>for patient <strong>${patientName}</strong>.<br><br>This action cannot be undone!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: '<i class="bi bi-trash"></i> Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const formData = new FormData();
                    formData.append('id', transactionId);
                    formData.append('__RequestVerificationToken', token);
                    
                    fetch(deleteUrl, {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        if (response.ok) {
                            return response.text();
                        }
                        throw new Error('Network response was not ok');
                    })
                    .then(() => {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'Transaction has been deleted.',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            location.reload();
                        });
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Error!',
                            text: 'Failed to delete transaction: ' + error.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    });
                }
            });
        });
    </script>
}
