@model MMGC.Models.Transaction
@{
    ViewData["Title"] = "Edit Transaction";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var patients = ViewBag.PatientsList as IEnumerable<MMGC.Models.Patient>;
    var appointments = ViewBag.AppointmentsList as IEnumerable<MMGC.Models.Appointment>;
    var procedures = ViewBag.ProceduresList as IEnumerable<MMGC.Models.Procedure>;
    var labTests = ViewBag.LabTestsList as IEnumerable<MMGC.Models.LabTest>;
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-pencil"></i> Edit Transaction</h2>
            <p>Update transaction information</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post" id="transactionForm" novalidate>
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="alert alert-danger" role="alert" id="validationSummary" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                        <strong><i class="bi bi-exclamation-triangle"></i> Please correct the errors below</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).Distinct())
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>

                    <h5 class="mb-3"><i class="bi bi-person"></i> Patient & Transaction Type</h5>
            
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PatientId" class="form-label"></label>
                            <select asp-for="PatientId" class="form-select" id="PatientId" required>
                                <option value="">-- Select Patient --</option>
                                @if (patients != null)
                                {
                                    @foreach (var patient in patients)
                                    {
                                        var isSelected = Model.PatientId == patient.Id;
                                        if (isSelected)
                                        {
                                            <option value="@patient.Id" selected="selected">@patient.FullName (MR: @patient.MRNumber)</option>
                                        }
                                        else
                                        {
                                            <option value="@patient.Id">@patient.FullName (MR: @patient.MRNumber)</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionType" class="form-label"></label>
                            <select asp-for="TransactionType" class="form-select" id="TransactionType" required>
                                <option value="">-- Select Type --</option>
                                <option value="Appointment">Appointment</option>
                                <option value="LabTest">Lab Test</option>
                                <option value="Procedure">Procedure</option>
                                <option value="Pharmacy">Pharmacy</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-link"></i> Related Records (Optional)</h5>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="AppointmentId" class="form-label"></label>
                            <select asp-for="AppointmentId" class="form-select" id="AppointmentId">
                                <option value="">-- Select Appointment (Optional) --</option>
                                @if (appointments != null)
                                {
                                    @foreach (var appointment in appointments)
                                    {
                                        var isSelected = Model.AppointmentId == appointment.Id;
                                        var displayText = $"Appointment #{appointment.Id} - {appointment.AppointmentDate:dd MMM yyyy}";
                                        if (isSelected)
                                        {
                                            <option value="@appointment.Id" selected="selected">@displayText</option>
                                        }
                                        else
                                        {
                                            <option value="@appointment.Id">@displayText</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="AppointmentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ProcedureId" class="form-label"></label>
                            <select asp-for="ProcedureId" class="form-select" id="ProcedureId">
                                <option value="">-- Select Procedure (Optional) --</option>
                                @if (procedures != null)
                                {
                                    @foreach (var procedure in procedures)
                                    {
                                        var isSelected = Model.ProcedureId == procedure.Id;
                                        if (isSelected)
                                        {
                                            <option value="@procedure.Id" selected="selected">@procedure.ProcedureName</option>
                                        }
                                        else
                                        {
                                            <option value="@procedure.Id">@procedure.ProcedureName</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="ProcedureId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LabTestId" class="form-label"></label>
                            <select asp-for="LabTestId" class="form-select" id="LabTestId">
                                <option value="">-- Select Lab Test (Optional) --</option>
                                @if (labTests != null)
                                {
                                    @foreach (var labTest in labTests)
                                    {
                                        var isSelected = Model.LabTestId == labTest.Id;
                                        if (isSelected)
                                        {
                                            <option value="@labTest.Id" selected="selected">@labTest.TestName</option>
                                        }
                                        else
                                        {
                                            <option value="@labTest.Id">@labTest.TestName</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="LabTestId" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-cash-coin"></i> Payment Details</h5>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter transaction description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentMode" class="form-label"></label>
                            <select asp-for="PaymentMode" class="form-select" id="PaymentMode" required>
                                <option value="">-- Select Payment Mode --</option>
                                <option value="Cash">Cash</option>
                                <option value="Card">Card</option>
                                <option value="Bank">Bank Transfer</option>
                                <option value="Online">Online Payment</option>
                            </select>
                            <span asp-validation-for="PaymentMode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionDate" class="form-label"></label>
                            <input asp-for="TransactionDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                                <option value="Refunded">Refunded</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReferenceNumber" class="form-label"></label>
                        <input asp-for="ReferenceNumber" class="form-control" placeholder="Enter reference number (optional)" />
                        <small class="form-text text-muted">Transaction reference, check number, or receipt number.</small>
                        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    </div>

                    @if (Model.InvoiceGenerated && !string.IsNullOrEmpty(Model.InvoicePath))
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> <strong>Invoice Generated:</strong> 
                            <a asp-action="DownloadInvoice" asp-route-id="@Model.Id" class="alert-link">Download Invoice</a>
                        </div>
                    }

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="bi bi-save"></i> Update Transaction
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            var form = document.getElementById('transactionForm');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                var btn = document.getElementById('submitBtn');
                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Updating...';
                }
            });
        })();
    </script>
}

