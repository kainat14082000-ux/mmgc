@model MMGC.Models.LabTest
@{
    ViewData["Title"] = "Lab Test Details";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-flask"></i> Lab Test Details</h2>
            <p>View complete lab test information</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Lab Test Information -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-flask"></i> Test Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-flask"></i> Test Name</strong>
                        <p class="mb-0"><strong>@Model.TestName</strong></p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-tag"></i> Category</strong>
                        <p class="mb-0"><span class="badge bg-secondary">@Model.LabTestCategory?.CategoryName</span></p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-calendar-event"></i> Test Date</strong>
                        <p class="mb-0">@Model.TestDate.ToString("dd MMM yyyy hh:mm tt")</p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-info-circle"></i> Status</strong>
                        <p class="mb-0">
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Pending" => "bg-secondary",
                                    "Sample Collected" => "bg-info",
                                    "In Progress" => "bg-warning",
                                    "Completed" => "bg-success",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">
                                <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @Model.Status
                            </span>
                        </p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-cash-coin"></i> Test Fee</strong>
                        <p class="mb-0"><strong class="text-success">PKR @Model.TestFee.ToString("N2")</strong></p>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-person"></i> Created By</strong>
                        <p class="mb-0">@(Model.CreatedBy ?? "System")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Patient Information -->
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-person"></i> Patient Information</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary text-white me-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        @(Model.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                    </div>
                    <div>
                        <strong>@Model.Patient?.FullName</strong><br>
                        <small class="text-muted">MR: @Model.Patient?.MRNumber</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Procedure Information -->
        @if (Model.Procedure != null)
        {
            <div class="card mb-4">
                <div class="card-header" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white;">
                    <h5 class="mb-0"><i class="bi bi-clipboard-pulse"></i> Related Procedure</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0"><strong>@Model.Procedure.ProcedureName</strong> - @Model.Procedure.ProcedureType</p>
                </div>
            </div>
        }

        <!-- Report Notes -->
        @if (!string.IsNullOrEmpty(Model.ReportNotes))
        {
            <div class="card mb-4">
                <div class="card-header" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); color: white;">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Report Notes</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.ReportNotes</p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar Information -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Additional Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong><i class="bi bi-calendar"></i> Created Date</strong>
                    <p class="mb-0">@Model.CreatedDate.ToString("dd MMM yyyy hh:mm tt")</p>
                </div>
                @if (Model.UpdatedDate.HasValue)
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-pencil"></i> Updated Date</strong>
                        <p class="mb-0">@Model.UpdatedDate.Value.ToString("dd MMM yyyy hh:mm tt")</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ReportFilePath))
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-file-earmark-text"></i> Report File</strong>
                        <p class="mb-0">
                            <a href="@Model.ReportFilePath" target="_blank" class="btn btn-sm btn-primary">
                                <i class="bi bi-download"></i> Download Report
                            </a>
                        </p>
                    </div>
                }
                <hr>
                <div class="d-grid gap-2">
                    <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-primary">
                        <i class="bi bi-person"></i> View Patient Profile
                    </a>
                    @if (Model.ProcedureId.HasValue)
                    {
                        <a asp-controller="Procedures" asp-action="Details" asp-route-id="@Model.ProcedureId.Value" class="btn btn-outline-info">
                            <i class="bi bi-clipboard-pulse"></i> View Procedure
                        </a>
                    }
                </div>
            </div>
        </div>

        @if (Model.Status != "Completed")
        {
            <div class="card">
                <div class="card-header" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); color: white;">
                    <h5 class="mb-0"><i class="bi bi-upload"></i> Upload Report</h5>
                </div>
                <div class="card-body">
                    <a asp-action="UploadReport" asp-route-id="@Model.Id" class="btn btn-success w-100">
                        <i class="bi bi-upload"></i> Upload Test Report
                    </a>
                </div>
            </div>
        }
    </div>
</div>

