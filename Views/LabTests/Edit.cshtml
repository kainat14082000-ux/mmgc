@model MMGC.Models.LabTest
@{
    ViewData["Title"] = "Edit Lab Test";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var patients = ViewBag.PatientsList as IEnumerable<MMGC.Models.Patient>;
    var categories = ViewBag.CategoriesList as IEnumerable<MMGC.Models.LabTestCategory>;
    var procedures = ViewBag.ProceduresList as IEnumerable<MMGC.Models.Procedure>;
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-pencil"></i> Edit Lab Test</h2>
            <p>Update lab test information</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post" id="labTestForm" novalidate>
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="alert alert-danger" role="alert" id="validationSummary" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                        <strong><i class="bi bi-exclamation-triangle"></i> Please correct the errors below</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).Distinct())
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>

                    <h5 class="mb-3"><i class="bi bi-person"></i> Patient & Category Information</h5>
            
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PatientId" class="form-label"></label>
                            <select asp-for="PatientId" class="form-select" id="PatientId" required>
                                <option value="">-- Select Patient --</option>
                                @if (patients != null)
                                {
                                    @foreach (var patient in patients)
                                    {
                                        var isSelected = Model.PatientId == patient.Id;
                                        if (isSelected)
                                        {
                                            <option value="@patient.Id" selected="selected">@patient.FullName (MR: @patient.MRNumber)</option>
                                        }
                                        else
                                        {
                                            <option value="@patient.Id">@patient.FullName (MR: @patient.MRNumber)</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LabTestCategoryId" class="form-label"></label>
                            <select asp-for="LabTestCategoryId" class="form-select" id="LabTestCategoryId" required>
                                <option value="">-- Select Category --</option>
                                @if (categories != null)
                                {
                                    @foreach (var category in categories)
                                    {
                                        var isSelected = Model.LabTestCategoryId == category.Id;
                                        if (isSelected)
                                        {
                                            <option value="@category.Id" selected="selected">@category.CategoryName</option>
                                        }
                                        else
                                        {
                                            <option value="@category.Id">@category.CategoryName</option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="LabTestCategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProcedureId" class="form-label"></label>
                        <select asp-for="ProcedureId" class="form-select" id="ProcedureId">
                            <option value="">-- Select Procedure (Optional) --</option>
                            @if (procedures != null)
                            {
                                @foreach (var procedure in procedures)
                                {
                                    var isSelected = Model.ProcedureId == procedure.Id;
                                    if (isSelected)
                                    {
                                        <option value="@procedure.Id" selected="selected">@procedure.ProcedureName</option>
                                    }
                                    else
                                    {
                                        <option value="@procedure.Id">@procedure.ProcedureName</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="ProcedureId" class="text-danger"></span>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-flask"></i> Test Details</h5>

                    <div class="mb-3">
                        <label asp-for="TestName" class="form-label"></label>
                        <input asp-for="TestName" class="form-control" placeholder="e.g., Complete Blood Count, X-Ray Chest" />
                        <span asp-validation-for="TestName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TestDate" class="form-label"></label>
                            <input asp-for="TestDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="TestDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Sample Collected">Sample Collected</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TestFee" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input asp-for="TestFee" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="TestFee" class="text-danger"></span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ReportFilePath))
                    {
                        <div class="mb-3">
                            <label class="form-label">Report File</label>
                            <div>
                                <a href="@Model.ReportFilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-file-earmark-text"></i> View Report
                                </a>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="ReportNotes" class="form-label"></label>
                        <textarea asp-for="ReportNotes" class="form-control" rows="4" placeholder="Enter report notes or results..."></textarea>
                        <span asp-validation-for="ReportNotes" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="bi bi-save"></i> Update Lab Test
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            var form = document.getElementById('labTestForm');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                var btn = document.getElementById('submitBtn');
                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Updating...';
                }
            });
        })();
    </script>
}

